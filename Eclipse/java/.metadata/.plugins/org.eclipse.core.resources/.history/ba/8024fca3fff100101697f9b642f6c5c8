
public class TicTacToe {
	private char[] fields = new char[9];
		public TicTacToe(){
			for(int count = 0;count <= fields.length-1;count++)
				fields[count] = ' ';
			System.out.println(fields[0] + "|" + fields[1] + "|" + fields[2] \n_|_|_\n | | \n_|_|_\n | | \n | | ");
		}
		public void setField(char symbol,int colum,int row){
			if(row == 2)
				colum = colum + 3;
			else if(row == 3)
				colum = colum + 6;
			fields[colum] = symbol;		
		}
}
