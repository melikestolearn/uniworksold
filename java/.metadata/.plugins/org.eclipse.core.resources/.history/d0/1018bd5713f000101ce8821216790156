package objects;

public class Fighter {
	private int health;
	private int power;
	
	public Fighter(){
		health = 100;
		power = 100;
	}
	public void hit(int damage){
		health = health-damage;
	}
	public void powerup(int increase){
		if(power+increase>100)
			power = 100;
		else
			power = power + increase;
		
	}
} 
